/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/pinctrl/k3.h>

&{/} {
	reg_wifi_en: fixed-regulator-wifi-en {
		compatible = "regulator-fixed";
		regulator-name = "wifi_en";
		regulator-min-microvolt = <1800000>;
		regulator-max-microvolt = <1800000>;
		pinctrl-names = "default";
		pinctrl-0 = <&wifi_pins_default>;
		regulator-always-on;
		enable-active-high;
		gpio = <&main_gpio0 72 GPIO_ACTIVE_HIGH>;
	};
};

&main_pmx0 {
	main_uart2_bt_pins_default: main-uart2-bt-pins-default {
		pinctrl-single,pins = <
			AM62X_IOPAD(0x005c, PIN_INPUT, 2) /* (R24) GPMC0_AD8.UART2_RXD */
			AM62X_IOPAD(0x0060, PIN_OUTPUT, 2) /* (R25) GPMC0_AD9.UART2_TXD */
			AM62X_IOPAD(0x0074, PIN_INPUT, 8) /* (U25) GPMC0_AD14.UART2_CTSn */
			AM62X_IOPAD(0x0078, PIN_OUTPUT, 8) /* (U24) GPMC0_AD15.UART2_RTSn */
		>;
	};

	bt_pins_default: bt-pins-default {
		pinctrl-single,pins = <
			/* BT_EN */
			AM62X_IOPAD(0x124, PIN_OUTPUT, 7) /* (A23) MMC2_SDCD.GPIO0_71 */
			/* BT_HOST_WAKE */
			AM62X_IOPAD(0x09c, PIN_OUTPUT, 7) /* (V25) GPMC0_WAIT1.GPIO0_38 */
			/* BT_DEV_WAKE */
			AM62X_IOPAD(0x1f0, PIN_OUTPUT, 7) /* (A18) EXT_REFCLK1.GPIO1_30 */
		>;
	};

	main_mmc2_wifi_pins_default: main-mmc2-wifi-pins-default {
		pinctrl-single,pins = <
			AM62X_IOPAD(0x108, PIN_INPUT, 0) /* (D24) MMC2_DAT3 */
			AM62X_IOPAD(0x10c, PIN_INPUT, 0) /* (E23) MMC2_DAT2 */
			AM62X_IOPAD(0x110, PIN_INPUT, 0) /* (C25) MMC2_DAT1 */
			AM62X_IOPAD(0x114, PIN_INPUT, 0) /* (B24) MMC2_DAT0 */
			AM62X_IOPAD(0x118, PIN_INPUT, 0) /* (D25) MMC2_CLK */
			AM62X_IOPAD(0x120, PIN_INPUT, 0) /* (C24) MMC2_CMD */
			AM62X_IOPAD(0x11c, PIN_INPUT, 0) /* (#N/A) MMC2_CLKB */
		>;
	};

	wifi_pins_default: wifi-pins-default {
		pinctrl-single,pins = <
			/* WIFI_EN */
			AM62X_IOPAD(0x128, PIN_OUTPUT, 7) /* (B23) MMC2_SDWP.GPIO0_72 */
			/* WIFI_HOST_WAK */
			AM62X_IOPAD(0x044, PIN_INPUT, 7) /* (N24) GPMC0_AD2.GPIO0_17 */
		>;
	};
};

&sdhci2 {
	#address-cells = <1>;
	#size-cells = <0>;

	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&main_mmc2_wifi_pins_default>;
	vmmc-supply = <&reg_wifi_en>;
	bus-width = <4>;
	non-removable;

	ti,fails-without-test-cd;
	cap-power-off-card;
	keep-power-in-suspend;
	ti,driver-strength-ohm = <50>;
	assigned-clocks = <&k3_clks 157 158>;
	assigned-clock-parents = <&k3_clks 157 160>;

	wlcore: wlcore@2 {
		compatible = "ti,wl1837";
		reg = <2>;
		interrupt-parent = <&main_gpio0>;
		interrupts = <17 0>;
	};
};

&main_uart2 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&main_uart2_bt_pins_default &bt_pins_default>;

	bluetooth {
		compatible = "ti,wl1837-st";
		enable-gpios = <&main_gpio0 71 GPIO_ACTIVE_HIGH>;
	};
};
